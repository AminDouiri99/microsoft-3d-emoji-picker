{
  "compilerOptions": {
    "target": "esnext",
    "module": "ESNext",
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "jsx": "react",
    "outDir": "./dist",
    //"composite": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "bundler",
    "stripInternal": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "dist",
    "types": ["vitest/globals"],
    "rootDir": "./src"
  },
  "include": ["vite.config.js", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["**/tests/**", "**/*.test.tsx"]
}
